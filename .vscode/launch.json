{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Jira Extension",
        "type": "extensionHost",
        "request": "launch",
        "runtimeExecutable": "${execPath}",
        "args": [
          "--extensionDevelopmentPath=${workspaceFolder}"
        ],
        "outFiles": [
          "${workspaceFolder}/dist/**/*.js"
        ],
        "preLaunchTask": "npm: build",  // or your custom build task
        "internalConsoleOptions": "openOnSessionStart"
      }
    ]
  }
  
